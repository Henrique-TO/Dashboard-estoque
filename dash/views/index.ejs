<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/style.css">
  <title>Dashboard de Estoque</title>
</head>
<body>

  <header>
    <h1>üì¶ Painel de Estoque</h1>
    <p>Integra√ß√£o autom√°tica com Google Sheets</p>
  </header>

  <section class="cards">
    <div class="card">
      <h2>Total de SKUs</h2>
      <p><%= rows.length %></p>
    </div>

    <div class="card">
      <h2>Estoque Total</h2>
      <p><%= rows.reduce((a, r) => a + Number(r[2] || 0), 0) %></p>
    </div>

    <div class="card">
      <h2>Itens Cr√≠ticos</h2>
      <p><%= rows.filter(r => Number(r[2]) < 5).length %></p>
    </div>
  </section>

  <section class="table-container">
    <table>
      <thead>
        <tr>
          <th>SKU</th>
          <th>Nome</th>
          <th>Estoque</th>
          <th>Categoria</th>
        </tr>
      </thead>
      <tbody>
        <% rows.forEach(r => { %>
          <tr>
            <td><%= r[0] %></td>
            <td><%= r[1] %></td>
            <td class="<%= Number(r[2]) < 5 ? 'critico' : Number(r[2]) < 20 ? 'alerta' : 'ok' %>">
              <%= r[2] %>
            </td>
            <td><%= r[3] %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

</body>
</html>
